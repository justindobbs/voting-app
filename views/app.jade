extends layout

block content
	div(class='content')
		nav#topNav(style='margin:0; border-radius: 0px' class='navbar navbar-default')
			div(class='container-fluid')
				div(class='navbar-header')
					button(aria-expanded='false' data-toggle='collapse'  data-target='#app-nav-navbar-collapse-1' type='button' class='navbar-toggle collapsed')
						span(class='sr-only')
							|	Toggle Navigation
						span(class='icon-bar')
						span(class='icon-bar')
						span(class='icon-bar')
					a#brand(href='/' class='navbar-brand')
						|	Voting App
				div#app-nav-navbar-collapse-1(class='collapse navbar-collapse')
					ul(class='nav navbar-nav navbar-right')
						li
						li(class='dropdown')
							a(href='' class='dropdown-toggle' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false')=	user.username
								span(class='caret')
							ul(class='dropdown-menu')
								li
									a(href='logout' class='text-underline')  Logout
		div(class='app-ui')
			ul(class='nav nav-pills')
				li(role='presentation' class='active')
					a#createPoll(href='app')
						| Create Poll
				li(role='presentation')
					a#myPolls(href='myPolls')
						|	My Polls
				li(role='presentation')
					a#publicPolls(href='publicPolls')
						|	Public Polls
			article
				div#pollContainer(class='container')
					header(class='app-head row')
						br
						br
					div(class='row')
						form#submitPoll(class='form-horizontal' name='submitPoll' method='post',action="/submitPoll")
							div(class='col-sm-10')
								div(class='form-group submit-poll')
									label(for="pollQuestion" class="col-sm-2 control-label")  Title
									div(class="col-sm-10")
										input#pollQuestion(required class='poll-ui form-control' type='text' placeholder='input your poll name' name='poll')
								div#pollOpts(class='form-group')
							div(class='col-sm-2')
								div(class='form-group')
									div(class='col-sm-offset-2 col-sm-10')
										input#submitPollButton(class='btn btn-primary poll-submit' type='submit' value="Submit")
										span#addOptionButton(class='btn btn-link')  Add New Option
					
				
	script(src='javascripts/lib/jquery.js')
	script(src='javascripts/lib/bootstrap.js')
	script(src='javascripts/app.js')